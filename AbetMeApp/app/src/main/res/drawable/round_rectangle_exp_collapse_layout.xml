<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <shape android:shape="line" >
        <stroke
            android:dashGap="5dp"
            android:dashWidth="15dp"
            android:width="1dp"
            android:color="@android:color/white" />
    </shape>
</item>

    <item android:bottom="@dimen/activity_horizontal_margin">
        <shape android:shape="line" >
            <stroke
                android:dashGap="5dp"
                android:dashWidth="15dp"
                android:width="1dp"
                android:color="#678678" />
        </shape>
    </item>
</layer-list>